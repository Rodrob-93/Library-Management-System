<%-include('partials/header.html')%>
    <link rel="stylesheet" href="../css/supsignup.css">
    <title>Signup Seller page</title>
    </head>

    <body>
        <div class="container bg-image">
            <div class="row">
                <div class="col-sm-6 signup-form">
                    <h1 class="display-4 header">Library Management System</h1>
                    <div class="alert alert-primary" role="alert">
                        Sign up now to trade books with us!
                    </div>
                    <form class="submit form" method="post">
                        <div class="form-group">
                            <label for="name">Full Name</label>
                            <input type="text" class="form-control" id="name" placeholder="John Doe" name="name">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Email</label>
                                <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="email">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Password</label>
                                <input type="password" class="form-control" id="inputPassword4" placeholder="Password" name="password">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="phone">Phone</label>
                                <input type="text" class="form-control" id="phone" placeholder="017xxxxxxxxxx" name="phone">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputAddress">Address</label>
                                <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="address">
                            </div>
                        </div>
                        <div class="submit-button">
                            <button type="submit" class="btn btn-primary">Create an account!</button>
                            <br>
                            OR
                        </div>
                    </form>
                    <br>
                    
                    <div class="submit-button">
                        <h5>Already have an account?</h5>
                        <a href="/suplogin"><button class="btn btn-info">Sign in</button></a>
                    </div>
                    <div class="">
                        <% for(var i=0; i< errs.length; i++){ %>
                            <%= errs[i].message %>
                            <br>
                        <% } %>

                    </div>
                </div>
            </div>
        </div>
        <%-include('partials/footer.html')%>
